{% extends 'baseadmin.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ product.ProductName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.Description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.Quantity }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.Status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_products_edit', {'id': product.id}) }}" class="btn btn-warning">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
