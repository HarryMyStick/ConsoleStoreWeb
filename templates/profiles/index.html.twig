{% extends 'base.html.twig' %}

{% block title %}Profiles index{% endblock %}

{% block body %}
    <h1>Profiles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.Fullname }}</td>
                <td>{{ profile.Email }}</td>
                <td>{{ profile.Address }}</td>
                <td>{{ profile.Telephone }}</td>
                <td>{{ profile.Gender }}</td>
                <td>{{ profile.DOB ? profile.DOB|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_profiles_show', {'id': profile.id}) }}">show</a>
                    <a href="{{ path('app_profiles_edit', {'id': profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profiles_new') }}">Create new</a>
{% endblock %}
